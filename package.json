{
  "name": "electrum-client",
  "version": "0.1.0",
  "description": "Electrum protocol client for node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "example",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/you21979/node-electrum-client..git"
  },
  "engines": {
    "node": ">=6"
  },
  "keywords": [
    "client",
    "electrum",
    "bitcoin"
  ],
  "dependencies": {
    "jsonrpc-spec": "0.0.3"
  },
  "devDependencies": {
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "coveralls": "^3.0.0",
    "docco": "^0.8.0",
    "electrum-host-parse": "*",
    "mocha": "^5.0.5",
    "npm-check": "^5.7.1",
    "nsp": "^3.2.1",
    "nyc": "^12.0.2",
    "pre-commit": "^1.2.2",
    "rpcgen": "github:DaniGuardiola/rpcgen",
    "standard": "^11.0.1",
    "typescript": "^2.8.0"
  },
  "scripts": {
    "build-rpc1": "rpcgen -i fixture/idl/protocol_v1.xml -t fixture/template/protocol.ts.tmpl > src/lib/electrum_protocol_v1.ts",
    "build-rpc2": "rpcgen -i fixture/idl/protocol_v2.xml -t fixture/template/protocol.ts.tmpl > src/lib/electrum_protocol_v2.ts",
    "build-rpc3": "rpcgen -i fixture/idl/protocol_v3.xml -t fixture/template/protocol.ts.tmpl > src/lib/electrum_protocol_v3.ts",
    "build-rpc4": "rpcgen -i fixture/idl/protocol_v4.xml -t fixture/template/protocol.ts.tmpl > src/lib/electrum_protocol_v4.ts",
    "build-rpc": "npm run build-rpc1 -s && npm run build-rpc2 -s && npm run build-rpc3 -s && npm run build-rpc4 -s",
    "build": "npm run build-rpc -s && tsc -p ./",
    "lint": "standard",
    "fix": "standard --fix",
    "test": "nyc mocha ./dist/test",
    "test-watch": "mocha --watch ./dist/test",
    "coverage": "nyc check-coverage --branches 90 --functions 90",
    "coverage-html": "nyc report --reporter html --report-dir coverage-html",
    "coveralls": "npm test -s && nyc report --reporter=text-lcov | coveralls",
    "check-security": "nsp check",
    "check-deps": "npm-check -p",
    "checklist": "npm run build -s && npm run lint -s && npm test -s && npm run coverage -s && npm run check-security -s && npm run check-deps -s",
    "docs": "rm -r docs && docco --output docs src/*.ts src/**/*.ts"
  },
  "pre-commit": [
    "build",
    "lint",
    "test",
    "coverage",
    "check-security",
    "check-deps",
    "coverage-html",
    "docs"
  ],
  "author": "Yuki Akiyama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/you21979/node-electrum-client./issues"
  },
  "homepage": "https://github.com/you21979/node-electrum-client.#readme"
}
